<p id="notice"><%= notice %></p>

<h1>Listing Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Chattiness</th>
      <th>Smoking</th>
      <th>Pets</th>
      <th>Music</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.chattiness %></td>
        <td><%= preference.smoking %></td>
        <td><%= preference.pets %></td>
        <td><%= preference.music %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

